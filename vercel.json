{
  "version": 2,
  "builds": [
    {
      "src": "server/*",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/(.*)", "dest": "/api/index.js" }
  ],
  "crons": [
    {
        "path": "/cron",
        "schedule": "0 0 * * *"
    }
  ]
}